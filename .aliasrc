# quick links to rc/text files
alias \
  aliasrc="vim $HOME/.aliasrc" \
  bashrc="vim $HOME/.bashrc" \
  funrc="vim $HOME/.funrc" \
  gital="vim $HOME/.gitconfig" \
  sc="vim $HOME/Documents/lang/shell/cheat" \
  vc="vim $HOME/Documents/lang/vim/cheat" \
  vd="vim $HOME/Documents/lang/vim/todo" \
  vimrc="vim $HOME/.vimrc"

# make verbose
alias \
  cp="cp -iv" \
  mv="mv -iv" \
  rm="rm -iv"

# utils
if ls --color > /dev/null 2>&1; then
  colorflag="--color"
else
  colorflag="-G"
fi

alias \
  ff="find . -print | grep" \
  grep="grep -niI --color=auto" \
  ls="ls -lFh $colorflag" \
  ls.="ls -dh $colorflag .*" \
  lsa="ls -laFh $colorflag" \
  lsd="ls -lFh $colorflag | grep --color=never '^d'" \
  R="R --no-save --quiet" \
  r="R" \
  reload="exec $SHELL -l" \
  vim="vim -p"

# media
alias \
  yt="youtube-dl --add-metadata -i" \
  yta="yt -x -f bestaudio/best"

# moving
alias \
  ..="cd .." \
  ...="cd ../.." \
  bin="cd $HOME/.local/bin" \
  dl="cd $HOME/Downloads" \
  dt="cd $HOME/Desktop" \
  dx="cd $HOME/Documents" \
  tunes="cd $HOME/Music"
