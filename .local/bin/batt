#!/usr/bin/env sh

# loop through all attached batteries
for battery in /sys/class/power_supply/BAT?; do
  percent=$(cat "$battery"/capacity 2>/dev/null) || break
  state=$(cat "$battery"/status 2>/dev/null) || break
  # status=$(cat "$battery"/capacity_level 2>/dev/null) || break
  # time=$(upower -d | grep time | awk '{print $2}')

  status=$(upower -d \
    | awk -F: '/capacity/{ print $2 }' \
    | sed 's/^ *//; s/%//')
  time=$(upower -d \
    | grep time \
    | awk -F: 'NR==1 { print $2 }' \
    | sed -E 's/^ *//; s/ (.).*/\1/')

  if [ $# -eq 0 ]; then
    printf "%s%% %s (%s left, Health: %.0f%%)\n" \
      "$percent" "$state" "$time" "$status"
  else
    printf "%s%% (%s left)\n" \
      "$percent" "$time"
  fi
done | sed 's/ *$//'
