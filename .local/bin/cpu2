#!/usr/bin/env sh

# cpu temp and usage
# similar to cpu but faster/only total cpu
temp=$(sed 's/000$/Â°C/' /sys/class/thermal/thermal_zone*/temp | tr '\n' ' ')
used=$(top -bn1 \
  | grep "Cpu(s)" \
  | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" \
  | awk '{ print 100 - $1"%" }' \
  | sed 's/ +/, /; s/\.[0-9]//' \
  | tr '\n' ' ')

if [ $# -eq 0 ]; then
  printf "CPU: %sTemp: %s" "$used" "$temp"
else
  printf "CPU: %s: %s" "$used" "$temp"
fi | sed -E 's/ +$/\n/'
